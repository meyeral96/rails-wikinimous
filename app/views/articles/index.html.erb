
<div class="row">

  <div class="col-sm-8 col-sm-offset-2">
    <h1>Articles</h1>
      <ul>
        <% @articles.each do |article| %>
          <article>
            <h2>
              <%= link_to "#{article.title}", "/articles/#{article.id}" %>
            </h2>
            <p><%= article.content%></p>
          </article>
        <% end %>
      </ul>
  </div>
</div>
